    macros {
        compatible = "zmk,behavior-macro";

        ppt_fp: ppt_fp {
            label = "PPT format painter";
            #binding-cells = <0>;
            bindings = <&kp LALT &kp H &kp F &kp P>;
        };
        wink: wink {
            label = "^^";
            #binding-cells = <0>;
            bindings = <&kp CARET &kp CARET>;
        };
        mak_ae: mak_ae {
            label = "mak_ae";
            compatible = "zmk,behavior-macro";
            wait-ms = <0>;
            tap-ms = <0>;
            #binding-cells = <0>;
            bindings = <&macro_tap &kp RALT &kp U>, <&macro_tap &kp N0 &kp N0 &kp E &kp N4>, <&macro_tap &kp RET>;
        };
        mak_ae_G: mak_ae_G {
            label = "mak_ae_G";
            compatible = "zmk,behavior-macro";
            wait-ms = <0>;
            tap-ms = <0>;
            #binding-cells = <0>;
            bindings = <WIN_U_LEAD>, <&macro_tap &kp N0 &kp N0 &kp C &kp N4>, <WIN_U_TRAIL>;
        };
    };